<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MySimpleApp.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">

            <Label Text="Mis Notas Rápidas"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Frame BorderColor="Gray" CornerRadius="10" Padding="10">
                <VerticalStackLayout Spacing="15">

                    <Label Text="Actividad:" FontSize="14" TextColor="Gray"/>
                    <Entry x:Name="ActivityEntry"
                           Placeholder="Ej. Comprar leche"
                           ClearButtonVisibility="WhileEditing" />

                    <HorizontalStackLayout Spacing="10">
                        <CheckBox x:Name="UrgentCheckBox" />
                        <Label Text="¿Es urgente?" 
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Frame>

            <Button Text="Guardar Estado"
                    Clicked="OnSaveClicked"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    CornerRadius="20" />

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,10"/>

            <VerticalStackLayout>
                <Label Text="Información Almacenada:" FontAttributes="Bold" />

                <Label x:Name="StoredInfoLabel" 
                       Text="No hay datos guardados aún."
                       FontSize="16"
                       TextColor="#333333"
                       Margin="0,10,0,0" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>